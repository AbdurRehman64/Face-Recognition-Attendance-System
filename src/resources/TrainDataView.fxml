<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #f4f7f6;" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.TrainDataController">

    <left>
        <VBox prefWidth="240.0" styleClass="sidebar">
            <children>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="brand-logo-small" text="FRAS">
                            <font>
                                <Font name="Segoe UI Bold" size="28.0" />
                            </font>
                        </Text>
                        <Label text="Admin Dashboard" textFill="#e0e0e0">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="20.0" top="30.0" />
                    </padding>
                </VBox>
                <Separator opacity="0.15">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </Separator>
                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" onAction="#handleDashboardBtn" styleClass="nav-btn" text="Dashboard">
                     <font>
                        <Font name="Candara" size="36.0" />
                     </font></Button>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" styleClass="nav-btn" text="+ Add Student" />
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" styleClass="nav-btn" text="Take Attendance"  onAction="#goToAttendance"/>
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" onAction="#handleReportsBtn" styleClass="nav-btn" text="Reports" />
                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" styleClass="nav-btn-active" text="Train Data" />
                    </children>
                    <padding>
                        <Insets left="15.0" right="15.0" top="10.0" />
                    </padding>
                </VBox>
                <VBox>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Button alignment="CENTER" maxWidth="Infinity" styleClass="logout-btn" text="Logout" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <VBox>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" styleClass="header-bar">
                <children>
                    <Label styleClass="page-title" text="Train Model">
                        <font>
                            <Font name="Segoe UI Bold" size="18.0" />
                        </font>
                    </Label>
                    <Pane HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER" spacing="10.0">
                        <Label text="Administrator" textFill="#546e7a">
                            <font>
                                <Font name="Segoe UI Bold" size="14.0" />
                            </font>
                        </Label>
                        <Circle fill="#b0bec5" radius="15.0" stroke="WHITE" strokeType="INSIDE" />
                    </HBox>
                </children>
                <padding>
                    <Insets left="30.0" right="30.0" />
                </padding>
                <effect>
                    <DropShadow height="10.0" radius="4.5" width="10.0">
                        <color>
                            <Color opacity="0.1" />
                        </color>
                    </DropShadow>
                </effect>
            </HBox>

            <VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-padding: 40;" VBox.vgrow="ALWAYS">

                <VBox alignment="CENTER" maxWidth="600.0" spacing="20.0" style="-fx-padding: 40;" styleClass="dashboard-card">
                    <children>
                        <Label styleClass="heading-text" text="Training Dataset Status" />

                        <HBox alignment="CENTER" spacing="40.0">
                            <VBox alignment="CENTER">
                                <Label text="150" textFill="#3f51b5">
                                    <font>
                                        <Font name="Segoe UI Bold" size="36.0" />
                                    </font>
                                </Label>
                                <Label text="Total Images" textFill="#78909c" />
                            </VBox>
                            <Separator orientation="VERTICAL" />
                            <VBox alignment="CENTER">
                                <Label text="25" textFill="#2ecc71">
                                    <font>
                                        <Font name="Segoe UI Bold" size="36.0" />
                                    </font>
                                </Label>
                                <Label text="Students Registered" textFill="#78909c" />
                            </VBox>
                        </HBox>

                        <Separator />

                        <Label text="Click below to train the recognizer with new data." textFill="#546e7a" />

                        <Button fx:id="trainBtn" maxWidth="200.0" styleClass="primary-btn" text="START TRAINING" />

                        <ProgressBar fx:id="progressBar" maxWidth="Infinity" progress="0.0" visible="false" />
                    </children>
                    <effect>
                        <DropShadow color="#0000001a" height="20.0" radius="9.5" width="20.0" />
                    </effect>
                </VBox>

                <VBox maxWidth="600.0" spacing="10" VBox.vgrow="ALWAYS">
                    <Label styleClass="input-label" text="Training Logs" />
                    <TextArea fx:id="logArea" editable="false" style="-fx-font-family: 'Consolas'; -fx-font-size: 12px;" text="System Ready..." wrapText="true" VBox.vgrow="ALWAYS" />
                </VBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>
