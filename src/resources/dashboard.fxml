<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.DashboardController">

    <left>
        <VBox prefWidth="240.0" styleClass="sidebar">
            <children>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="brand-logo-small" text="FRAS">
                            <font>
                                <Font name="Segoe UI Bold" size="28.0" />
                            </font>
                        </Text>
                        <Label text="Admin Dashboard" textFill="#e0e0e0">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="20.0" top="30.0" />
                    </padding>
                </VBox>

                <Separator opacity="0.15">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </Separator>

                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label alignment="CENTER" maxWidth="Infinity" opacity="0.6" text="DASHBOARD" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Black" size="45.0" />
                            </font>
                            <padding>
                                <Insets bottom="25.0" top="15.0" />
                            </padding>
                        </Label>


                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" styleClass="nav-btn-active" text="+ Add Student" />

                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" onAction="#goToAttendance" styleClass="nav-btn" text="Take Attendance" />

                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" onAction="#goToReports" styleClass="nav-btn" text="Reports" />

<!--                        <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" onAction="#handleTrainBtn" styleClass="nav-btn" text="Train Data" />-->
                    </children>
                    <padding>
                        <Insets left="15.0" right="15.0" top="10.0" />
                    </padding>
                </VBox>

                <VBox>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Button alignment="CENTER" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-btn" text="Logout" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <VBox style="-fx-background-color: #f4f7f6;">
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" styleClass="header-bar">
                <children>
                    <Label styleClass="page-title" text="Student Registration">
                        <font>
                            <Font name="Segoe UI Bold" size="18.0" />
                        </font>
                    </Label>
                    <Pane HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER" spacing="10.0">
                        <Label text="Administrator" textFill="#546e7a">
                            <font>
                                <Font name="Segoe UI Bold" size="14.0" />
                            </font>
                        </Label>
                        <Circle fill="#b0bec5" radius="15.0" stroke="WHITE" strokeType="INSIDE" />
                    </HBox>
                </children>
                <padding>
                    <Insets left="30.0" right="30.0" />
                </padding>
                <effect>
                    <DropShadow height="10.0" radius="4.5" width="10.0">
                        <color>
                            <Color opacity="0.1" />
                        </color>
                    </DropShadow>
                </effect>
            </HBox>

            <StackPane alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="30.0" top="30.0" />
                </padding>

                <VBox maxWidth="650.0" spacing="20.0" styleClass="dashboard-card">
                    <children>
                        <Label styleClass="heading-text" text="New Student Details" />
                        <Separator />

                        <HBox spacing="20.0">
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <Label styleClass="input-label" text="Full Name" />
                                <TextField fx:id="nameField" promptText="e.g. Ali Khan" styleClass="input-field" />
                            </VBox>
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <Label styleClass="input-label" text="Roll Number" />
                                <TextField fx:id="rollNoField" promptText="e.g. CS-2025-01" styleClass="input-field" />
                            </VBox>
                        </HBox>

                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="Department / Course" />
                            <TextField fx:id="depField" promptText="e.g. Software Engineering" styleClass="input-field" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label styleClass="input-label" text="Face Capture" />
                            <StackPane prefHeight="240.0" style="-fx-background-color: #000;" styleClass="camera-placeholder">
                                <children>
                                    <ImageView fx:id="cameraView" fitHeight="240.0" fitWidth="320.0" preserveRatio="true" />
                                </children>
                            </StackPane>
                        </VBox>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <Button styleClass="secondary-btn" text="Reset Form" />

                            <Button fx:id="captureBtn" style="-fx-background-color: #e67e22;" styleClass="primary-btn" text="Capture Face" />

                            <Button fx:id="saveBtn" styleClass="primary-btn" text="Save Student" />
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <effect>
                        <DropShadow height="20.0" radius="9.5" width="20.0">
                            <color>
                                <Color opacity="0.1" />
                            </color>
                        </DropShadow>
                    </effect>
                </VBox>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
